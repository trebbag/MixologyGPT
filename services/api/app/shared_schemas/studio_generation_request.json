{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StudioGenerationRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["user_id", "constraints"],
  "properties": {
    "user_id": {"type": "string", "format": "uuid"},
    "template": {"type": "string"},
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "include_ingredients": {"type": "array", "items": {"type": "string"}},
        "exclude_ingredients": {"type": "array", "items": {"type": "string"}},
        "style": {"type": "string"},
        "abv_target": {"type": "number"},
        "sweetness_target": {"type": "number"},
        "acidity_target": {"type": "number"},
        "bitterness_target": {"type": "number"}
      }
    },
    "sliders": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "strength": {"type": "number"},
        "sweetness": {"type": "number"},
        "acidity": {"type": "number"},
        "bitterness": {"type": "number"}
      }
    }
  }
}
