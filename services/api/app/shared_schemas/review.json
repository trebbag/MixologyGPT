{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RecipeReview",
  "type": "object",
  "additionalProperties": false,
  "required": ["user_id", "recipe_id", "rating"],
  "properties": {
    "user_id": {"type": "string", "format": "uuid"},
    "recipe_id": {"type": "string", "format": "uuid"},
    "rating": {"type": "integer", "minimum": 1, "maximum": 5},
    "notes": {"type": "string"},
    "signals": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "value"],
        "properties": {
          "type": {"type": "string"},
          "value": {"type": "string"}
        }
      }
    }
  }
}
