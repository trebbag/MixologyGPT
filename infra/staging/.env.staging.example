POSTGRES_PASSWORD=bartender_staging
JWT_SECRET=change-me
OPENAI_API_KEY=
INTERNAL_TOKEN=change-me
ALERT_WEBHOOK_URL=http://alert-receiver:5001/alerts

# Optional downstream alert destinations (treat as secrets; do not commit real values)
SLACK_WEBHOOK_URL=
PAGERDUTY_ROUTING_KEY=
FORWARD_WEBHOOK_URLS=
ALERT_RECEIVER_CONFIRM_TOKEN=
ALERT_RECEIVER_CONFIRM_WINDOW_SECONDS=120

# Runtime providers
EMBEDDINGS_PROVIDER=openai
EMBEDDINGS_MODEL=text-embedding-3-small
EMBEDDINGS_DIMENSIONS=1536
LLM_PROVIDER=openai
LLM_MODEL=chatgpt-5.2-thinking
LLM_TEMPERATURE=0.3

# Rate limits (tune carefully)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_INGEST_PER_MINUTE=20
RATE_LIMIT_HARVEST_PER_MINUTE=10
RATE_LIMIT_AUTO_HARVEST_PER_MINUTE=180
RATE_LIMIT_AGENT_INVENTORY_PER_MINUTE=5
RATE_LIMIT_AGENT_HARVEST_PER_MINUTE=10
RATE_LIMIT_AGENT_MIXOLOGY_PER_MINUTE=20
RATE_LIMIT_AGENT_BALANCE_PER_MINUTE=30

# Retry policy
HARVEST_MAX_ATTEMPTS=3
HARVEST_RETRY_BASE_SECONDS=300
HARVEST_RETRY_MAX_SECONDS=3600

# Periodic alert-threshold calibration (recommended in staging)
ENABLE_ALERT_CALIBRATION=true
ALERT_CALIBRATION_INTERVAL_SECONDS=21600
ALERT_CALIBRATION_MIN_JOBS=20
ALERT_CALIBRATION_BUFFER_MULTIPLIER=1.25

# Web app config
NEXT_PUBLIC_API_URL=http://localhost:8000

# Environment mode
ENVIRONMENT=staging
